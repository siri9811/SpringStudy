{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}}
        <tr>
            <th>{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>
<!-- GET, a 즉 링크를 사용-->
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">수정</a>
<a href="/articles/{{article.id}}/delete" class="btn btn-danger">삭제</a>

<a href="/articles">글 목록</a>
{{>layouts/footer}}